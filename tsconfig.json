{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "target": "ES5",
    "module": "amd",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ]
  }
}